FROM postgres

RUN apt-get update
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
RUN	 apt-get install -y \
    libical-dev \
     wget \
     git
RUN apt-get install -y lsb-release
RUN sh -c 'echo "deb http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list'\
   && wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | apt-key add - \
  && apt-get update

RUN apt-get -y install postgresql-server-dev-14

RUN git clone https://github.com/petropavel13/pg_rrule.git
WORKDIR pg_rrule
RUN apt-get -y install make gcc

RUN make
#RUN make installcheck
RUN make install



#WORKDIR pg_rrule
#
RUN mkdir /usr/lib/postgresql/${PG_MAJOR}/lib
RUN cp ./libpg_rrule.so /usr/lib/postgresql/${PG_MAJOR}/lib/pg_rrule.so
RUN cp ./pg_rrule.control /usr/share/postgresql/${PG_MAJOR}/extension
RUN cp ./sql/pg_rrule.sql.in /usr/share/postgresql/14/extension/pg_rrule--0.2.0.sql

CMD bash